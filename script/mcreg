$: << File.expand_path(File.dirname(__FILE__) + '/../lib')
require 'toycipher'

b = ToyCipher::ToyCipherBase.new


attempts = { 
  :movies => %w(
    PUMP UP THE VOLUME
    WE ARE HERE THE PALE BLUE DOT
    TWINS
    UHF
    BANCHIKWANG THE FOUL KING
    THE CALL ME BRUCE
