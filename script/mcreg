attempts.each do |name, value|
  puts "Trying #{name}: #{value}"
  str = value.join.gsub(' ', '')
  acc = 0
  total = str.size
  str.each_byte { |ch| 
    acc += b.alph.index(ch.chr.upcase) + 1
  }
  puts "Total dec: #{acc}" 
  puts "Total bin: #{acc.to_s(base = 2)}"
  puts "Total hex: #{acc.to_s(base = 16)}"
end
